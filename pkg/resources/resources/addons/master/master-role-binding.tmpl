kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: {{ .Name }}
  namespace: {{ .Namespace }}
  labels:
    app: "camel-k"
subjects:
  - kind: ServiceAccount
    namespace: {{ .Namespace }}
    name: {{ .ServiceAccount }}
roleRef:
  kind: Role
  namespace: {{ .Namespace }}
  name: {{ .Name }}
  apiGroup: rbac.authorization.k8s.io
